 <%# app/views/coins/show.html.erb %>
<div class="main-content">
  <div class="coin-card-symbol"><h1><%= image_tag(@coin.image_url, class: "avatar-small mr-2") %><%= @coin.name.capitalize %><%= @coin.symbol.upcase %></h1></div>
  <div class="coin-card-price text-center"><h3>$ <%= number_with_delimiter(@coin.price, delimiter: "'", separator: ",") %></h3></div>
  <div class="coin-card-percentage d-flex justify-content-end"><%= number_with_delimiter(@coin.percentage_24, delimiter: "'", separator: ".") %> %</div>
  <canvas class="chart" data-history="<%= @coin.history_seven %>" height="100px" width="100px"></canvas>
  <p>Description should be here</p>
  <p><%= @coin.description %></p>
</div>
