<%# Market page with all coins  %>

  <div class="market-title">
    <h1>More than a Market. Your next market reference!</h1>
  </div>
    <table class="table-market">
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Symbol</th>
        <th>Price</th>
        <th>24h. %</th>
      </tr>
      <% @coins.each do |coin| %>
      <tr>
        <td><%= (coin.market_cap_rank) %></td>
        <td><%= link_to coin.name, coin %></td>
        <td><%= coin.symbol.upcase %></td>
        <td><%= coin.price %> $</td>
        <td><%= coin.percentage_24.to_f.round(2) %> %</td>
      </tr>
      <% end %>
    </table>
