<%# <h1>New Entry</h1>
<p>Find me in app/views/entries/new.html.erb</p> %>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg rounded p-3 shadow">
        <h1>Add a new entry</h1>
        <%= simple_form_for [@portfolio, @entry] do |f| %>
          <%= f.association :coin, prompt: 'Select a cryptocurrency', input_html: { class: 'select2' } %>
          <%= f.input :amount, placeholder: 'Enter the amount you want!', collection: 0..100 %>
          <%= f.input :buying_price, placeholder: 'How much did you buy it?' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
      <%= link_to '←', portfolio_path(@portfolio), class: 'btn btn-link' %>
    </div>
  </div>
</div>
