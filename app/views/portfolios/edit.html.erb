<div class="main-content">
  <div class="back-button">
    <%= link_to '←', portfolios_path, class: 'btn btn-link' %>
  </div>
  <div class="forms">
    <div class="container py-5">
      <div class="row">
        <div class="col-12 col-md-6 offset-lg-3">
          <h3>Update your Portfolio</h3>
          <%= simple_form_for @portfolio do |f| %>
            <%= f.input :name, placeholder: 'Enter your new portfolio name here' %>
            <div class="button-add-center">
              <%= f.submit class: 'btn btn-flat' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="coins-list d-flex">
      <div class="coins1-card"></div>
      <div class="coins2-card"></div>
      <div class="coins3-card"></div>
    </div>
  </div>
</div>
