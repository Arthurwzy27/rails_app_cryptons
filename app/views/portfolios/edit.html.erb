<%= link_to '←', portfolios_path, class: 'btn btn-link' %>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg rounded p-3 shadow">
        <h3>Update your Portfolio</h3>
        <%= simple_form_for @portfolio do |f| %>
          <%= f.input :name, placeholder: 'Enter your new portfolio name here' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
