<div class="main-content">
  <div class="back-add-button">
    <%= link_to '←', portfolios_path, class: 'btn btn-link', style:'text-align:left' %>
    <div class="d-flex justify-content-end">
        <%= link_to new_portfolio_entry_path(@portfolio), class: 'btn btn-link' do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </div>
  </div>

  <div class="portfolio-show">
    <h1><%= @portfolio.name %></h1>
    <% @portfolio.entries.each do |entry| %>
      <div class="entry-info">
        <p><%= entry.coin.name %></p>
        <p><%= entry.amount %></p>
        <p><%= entry.buying_price %></p>

        <%= link_to "Edit", edit_entry_path(entry) %>
        <%= link_to 'Delete', entry_path(entry), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this Entry?' } %>
      </div>
    <% end %>
  </div>
</div>
